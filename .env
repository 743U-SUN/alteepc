# 環境設定
NODE_ENV=development

# データソース設定
# データベース接続を有効化
USE_DATABASE=true

# Next.js
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Database
# Docker環境内
DATABASE_URL="postgresql://postgres:postgres@db:5432/alteepc?schema=public"
# ローカル環境（Dockerを使わずに直接接続する場合）
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/alteepc?schema=public"

# Prisma 6の設定
DIRECT_URL="${DATABASE_URL}"

# PostgreSQL設定（Docker用）
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=alteepc
